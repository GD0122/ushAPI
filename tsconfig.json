{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        
        "allowJs": true, 

        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "typeRoots": ["@types", "node_modules/@types"],
    },
    "include": ["./src/**/*"],
    
}